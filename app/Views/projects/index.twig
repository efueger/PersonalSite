{% extends 'layout.twig' %}
{% block content %}
    <div class="container pt">
        <div class="col-lg-12">
            {% for project in projects %}
                <div class="col-md-4 portfolio-index-item">
                    <a href="{{ path_for('portfolio.show', {'slug': project.slug}) }}">
                        <img class="img-responsive project-preview-img" src="/img/projects/{{ project.preview }}">
                        <h3>{{ project.title }}</h3>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}