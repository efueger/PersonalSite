{% extends 'layouts/admin.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 pt">
                <h2>Published Posts</h2>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Slug</th>
                        <th>Title</th>
                        <th>Published Date</th>
                        <th>Actions</th>
                    </tr>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.slug }}</td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.publishedAt|date("l F jS, Y") }}</td>
                            <td><a href="{{ path_for('admin.blog.edit', {'slug': post.slug}) }}"><i
                                            class="fa fa-pencil fa-2x"></i></a> &nbsp; &nbsp;
                                <a href="{{ path_for('admin.blog.destroy', {'slug': post.slug}) }}"
                                   class="deletePost"><i
                                            class="fa fa-trash fa-2x"></i></a> &nbsp; &nbsp;
                                <a href=""><i class="fa fa-twitter fa-2x"></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block footerjs %}
    <script>
        $(".deletePost").click(function () {
            return confirm("Are you sure you want to delete this post?") === true;
        });
    </script>
{% endblock %}