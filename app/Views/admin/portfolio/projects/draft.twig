{% extends 'layouts/admin.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 pt">
                <h2>Draft projects</h2>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                    {% for project in projects %}
                        <tr>
                            <td>{{ project.title }}</td>
                            <td><a href="{{ path_for('admin.blog.edit', {'slug': project.slug}) }}"><i
                                            class="fa fa-pencil fa-2x"></i></a> &nbsp; &nbsp;
                                <a href="{{ path_for('admin.blog.destroy', {'slug': project.slug}) }}"
                                   class="deleteproject"><i
                                            class="fa fa-trash fa-2x"></i></a> &nbsp; &nbsp;
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block footerjs %}
    <script>
        $(".deleteproject").click(function () {
            return confirm("Are you sure you want to delete this project?") === true;
        });
    </script>
{% endblock %}