{% extends 'layouts/admin.twig' %}
{% block content %}
    <div class="container pt">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h3>Create New Portfolio Project</h3>
                <form method="POST" action="{{ path_for('admin.portfolio.store') }}" enctype="multipart/form-data">
                    <div class="form-group">
                        <input class="form-control" placeholder="Title" name="title" type="text" autofocus="">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="20" class="form-control"
                                  placeholder="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Live URL" name="live_url" type="text" autofocus="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Github URL" name="github_url" type="text" autofocus="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Technologies Used" name="technologies" type="text"
                               autofocus="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Preview Image" name="preview" type="file" autofocus="">
                    </div>
                    <div class="form-group">
                        <input type="text" name="published_at" data-field="datetime" class="form-control" readonly
                               placeholder="Publish At" data-format="yyyy-MM-dd hh:mm:ss">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">Save Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="dtBox"></div>
{% endblock %}
{% block footerjs %}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#dtBox").DateTimePicker();
        });
    </script>
{% endblock %}