{% extends 'layout.twig' %}
{% block content %}
    <div class="container pt">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h3>Create New Blog Post</h3>
                <form method="POST" action="/blog">
                    <div class="form-group">
                        <input class="form-control" placeholder="Title" name="title" type="text" autofocus="">
                    </div>
                    <div class="form-group">
                        <textarea name="content" rows="20" class="form-control" placeholder="Content"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="text" data-field="datetime" class="form-control" readonly placeholder="Publish At" data-format="yyyy-MM-dd hh:mm:ss">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">Save Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="dtBox"></div>
{% endblock %}
{% block footerjs %}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#dtBox").DateTimePicker();
        });
    </script>
{% endblock %}